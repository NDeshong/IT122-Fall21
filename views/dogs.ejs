<DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doggies</title>
 <link rel="stylesheet" href="css/main.css">
</head>
  
<body>
  
  <script>

    function showDog()
    {
      const randomimage = document.getElementById("randomimage");
      
      const mybreed = document.getElementById("mybreed");

      const randomImageApiUrl =       
      "https://dog.ceo/api/breeds/image/random";

      fetch(randomImageApiUrl)
        .then(function(response)
        {
           return response.json();
        })
        .then(function(json)
        {
          console.log(json);
          var imageUrl = json.message;
          let url = json.message;
          let parts = url.split("/")
          var breedName = parts[parts.length-2];
          console.log(breedName);
          mybreed.innerHTML = breedName;
          randomimage.src=imageUrl;
        })
        .catch(function(error)
        {
          console.log(error);
        });
    }
    showDog();
  </script>
  
  <button onClick="showDog()">Fetch a Cute Pupper!</button>
  <h1 id="mybreed">Types of Breeds</h1>
  <img id="randomimage"/>
     <br>
  <a href="./">Return to Homepage</a>

</body>
</html>